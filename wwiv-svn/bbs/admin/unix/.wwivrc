#
# .wwivrc
#
# Define all our WWIV variables for all the scripts so we can 
# source it all from one place.  
#

HOME=REPLACE-WWIVBASE
WWIV_DIR=${HOME}
PATH=${WWIV_DIR}:${WWIV_DIR}/bin:/bin:/usr/bin
WWIVDATA_DIR=${WWIV_DIR}/data
WWIVNET_DIR=${WWIV_DIR}/wwivnet
INBOUND=${WWIVNET_DIR}/inbound/new
PROCESSED=${WWIVNET_DIR}/inbound-processed
WWIVNET_NODE=yournodenumber

export HOME PATH WWIV_DIR WWIVDATA_DIR WWIVNET_DIR INBOUND PROCESSED WWIVNET_NODE
